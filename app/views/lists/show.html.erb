<% @list.bookmarks.each do |bookmark| %>
  <li>
    <%= bookmark.movie.title %>
    <%= bookmark.comment %>
    <%= link_to 'Delete',
    bookmark_path(bookmark),
    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </li>
<% end %>

<li><%= link_to 'Add a Movie', new_list_bookmark_path(@list) %></li>
